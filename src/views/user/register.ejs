<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../../css/user/register.css">
    <link rel="stylesheet" href="../../../css/main/home.css">
    <link rel="icon" href="../../../img/general/favicon.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <title>Moda Sport</title>
</head>
<body>

    <%- include ("../partials/header.ejs") %>
    
    <section class="seccion-login">
        <main class="formulario-login animadoFijo">
            <h1>FORMULARIO DE REGISTRO</h1>
            <form action="/usuarios" method="POST">
                <div class="input-nombre">
                    <label for="nombre"><i class="fas fa-user"></i></label>
                    <input type="text" name="nombre" id="nombre" placeholder="Nombre">
                    <% if (locals.errors && errors.nombre) { %>
                        <p class="formulario-register-error"><%= errors.nombre.msg %></p>
                       <% } %>
                </div>
                <div class="input-apellido">
                    <label for="apellido"><i class="far fa-user"></i></label>
                    <input type="text" name="apellido" id="apellido" placeholder="Apellido">
                    <% if (locals.errors && errors.apellido) { %>
                        <p class="formulario-register-error"><%= errors.apellido.msg %></p>
                       <% } %>
                </div>
                <div class="input-email">
                    <label for="email"><i class="fas fa-envelope"></i></label>
                    <input type="text" name="email" id="email" placeholder="E-mail">
                      <% if (locals.errors && errors.email) { %>
                        <p class="formulario-register-error"><%= errors.email.msg %></p>
                       <% } %>
                </div>
                <div class="input-contraseña">
                    <label for="contraseña"><i class="fas fa-lock"></i></label>
                    <input type="password" name="contraseña" id="contraseña" placeholder="Contraseña">
                      <% if (locals.errors && errors.contraseña) { %>
                        <p class="formulario-register-error"><%= errors.contraseña.msg %></p>
                       <% } %>
                </div>
                <div class="boton-ingresar">
                    <input type="submit" name="" id="" value="Registrar">
                </div>


            </form>
            <h4 class="frase-inferior-formulario">Ya estas registrado? <a href="/usuarios/login">Ingresá aquí!</a></h4>

        </main>

    </section>
    
    <%- include ("../partials/footer.ejs") %>

    <script src="../../../js/main/home.js"></script>
    <script src="../../../js/main/menu-hamburguesa.js"></script>
</body>
</html>